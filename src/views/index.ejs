<!DOCTYPE html>
<html lang="en">
  <%- include("./_header.ejs") %>
  <script>
    TABLE_ID = '<%= tableId %>';
  </script>
  <script src="/socket.io/socket.io.js" defer></script>
  <script src="/script.js" defer></script>
  <body>
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <div style="font-size: 20px">Players</div>
        </div>
        <div class="col">
          <div style="font-size: 20px">Table</div>
        </div>
        <div class="col">
          <div style="font-size: 20px">Activity</div>
        </div>
      </div>
      <hr />
      <div class="row" style="padding-top: 10px">
        <!-- Players -->
        <div class="col">
          <ul class="list-group" id="players"></ul>
        </div>
        <!-- Table -->
        <div class="col">
          <h3>Pot: <span id="pot"></span></h3>
          <button class="btn btn-primary" id="raiseBtn">Match</button>
          <button class="btn btn-warning" id="matchBtn">Raise</button>
          <button class="btn btn-danger" id="foldBtn">Fold</button>
        </div>
        <!-- Activity Chat -->
        <div class="col">
          <ul class="list-group list-group-flush" id="activityChat"></ul>
        </div>
      </div>
    </div>
  </body>
</html>
